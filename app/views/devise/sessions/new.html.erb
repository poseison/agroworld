<div class="container signin-container">
<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <div class="card signin-card">
      <div class="card-block">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html=>{:class=>:"form-horizontal signing-form"}) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Email:", class: "form-control", id: "emailInput" %>
          </div>

          <div clas2s="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "Passwor:", class: "form-control", id: "passwordInput" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "control-label" %>
            </div>
          <% end -%>


            <%= f.submit "Log in", class: 'btn signin-btn' %>

        <% end %>

        <%= render "devise/shared/links" %>
      </div>
      </div>
      <div class="col-2"></div>
        </div>
  </div>
</div>
